<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_title_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px96"
    android:background="@drawable/common_header_bg">


    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="@dimen/px90"
        android:layout_height="@dimen/px96"
        android:background="@drawable/selector_common_header_menu"
        android:gravity="center|left">

        <ImageView
            android:layout_width="@dimen/px44"
            android:layout_height="@dimen/px44"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px28"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="自定义柱形图"
        android:textColor="@color/white"
        android:textSize="@dimen/px30" />

    <LinearLayout
        android:id="@+id/title_right"
        android:layout_width="@dimen/px96"
        android:layout_height="@dimen/px96"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_common_header_menu"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="@dimen/px44"
            android:layout_height="@dimen/px44"
            android:layout_marginRight="@dimen/px28"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px28"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/px26"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
