<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_demo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px50"
        android:layout_marginTop="@dimen/px30"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="自定义view演示" />

    <Button
        android:id="@+id/btnChart"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px100"
        android:layout_below="@id/tv_demo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px200"
        android:background="@color/radio_blue_nor"
        android:text="柱形图" />

    <Button
        android:id="@+id/btnProg"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px100"
        android:layout_below="@id/btnChart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px50"
        android:background="@color/radio_blue_nor"
        android:text="分段进度条" />


</RelativeLayout>