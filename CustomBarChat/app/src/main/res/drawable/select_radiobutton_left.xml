<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!--layer-list将item所画的drawable一层层盖在上面-->
            <item>
                <shape>
                    <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" />
                    <solid android:color="@color/radio_blue_press" />
                    <!-- <padding android:bottom="2px" android:left="2px" android:right="1px" android:top="2px" />-->
                    <padding android:right="1px" />
                </shape>
            </item>

            <item>
                <shape>
                    <corners android:bottomLeftRadius="19dp" android:topLeftRadius="19dp" />
                    <solid android:color="@color/radio_blue_nor" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" />
                    <solid android:color="@color/radio_blue_press" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>